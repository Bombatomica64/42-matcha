{
  "name": "api-schema",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "generate:frontend": "openapi-typescript openapi.yaml -o generated/typescript/api.ts",
    "generate:backend": "node scripts/generate-validators.js",
    "validate": "swagger-parser validate openapi.yaml",
    "build": "npm run validate && npm run generate:frontend && npm run generate:backend",
    "docs": "redoc-cli serve openapi.yaml --watch --port 8080",
    "docs:build": "redoc-cli build openapi.yaml --output docs/index.html",
    "preview": "redocly preview-docs openapi.yaml --port 8081",
    "serve": "node scripts/preview-server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@redocly/cli": "^2.0.2",
    "express": "^5.1.0",
    "openapi-typescript": "^7.8.0",
    "redoc-cli": "^0.8.5",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  }
}
